<div id="post_content">

  <p class="title">
    <strong>Title:</strong>
    <%= @post.title %>
  </p>

  <p>
    <strong>User:</strong>
    <%= @post.user.name %><br>
  </p>

  <p class="body">
    <strong>Body:</strong>
    <%= @post.body %>
  </p>

  <p class="date">
    Submitted <%= time_ago_in_words(@post.created_at) %> Ago
    | <%= link_to 'Like!', like_path(@post) %>
    | <%= link_to 'Edit', edit_post_path(@post) %>
    | <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are you sure?'} %>
  </p>

  <p>
    Favorited? <%= @post.liked_by?(current_user) %><br>
    Are you following this user? <%= @post.user.followed_by?(current_user) %>
  </p>

  <p>
    <%= image_tag @post.media.url %>
  </p>

<a href="https://twitter.com/share" class="twitter-share-button" data-via="GoldBear299" data-hashtags="BigWombat">Tweet</a> <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
  <div class="fb-like" data-href="http://www.lovemeow.com" data-width="100" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>

  <div id="comments">
    <h2><%= @post.comments.count %> Comments</h2>
    <%= render @post.comments %>

    <h3>Add a Comment</h3>
    <%= render "comments/form" %>
  </div>

  <p>
    <%= link_to 'Back', posts_path %>
  </p>

</div>
