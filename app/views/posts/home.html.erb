<h1>SHOW ME THE POSTS</h1>

    <% @home.each do |q| %>
      <div class="post_wrapper posts">
        <td>
          <h2 class="title">
            <%= q.title %>
          </h2>
        </td>
        <td>
          <p class="date">
            <%= q.created_at.in_time_zone('Singapore').strftime("%A, %B %d, %Y [%I : %M : %S : %L %p]") %>
          </p>
        </td>
        <td><%= link_to 'Show', user_post_path(q.user_id, q) %></td>
        <td>| <%= link_to 'Edit', edit_user_post_path(q.user_id, q) %></td>
        <td>| <%= link_to 'Destroy', user_post_path(q.user, q), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </div>
    <% end %>
